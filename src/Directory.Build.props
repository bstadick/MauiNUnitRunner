<Project>
  <PropertyGroup>
    <!-- Global settings -->
    <NetFrameworkVersion>net8.0</NetFrameworkVersion>
    <Configurations>Debug;Release;UnitTest</Configurations>

    <!-- Package Creation settings -->
    <Version>0.2.0</Version>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <Title>MauiNUnitRunner</Title>
    <Authors>bstadick</Authors>
    <Description>NUnit test runner for .NET MAUI based projects.</Description>
    <Copyright>Copyright (c) bstadick and contributors.</Copyright>
    <PackageProjectUrl>https://github.com/bstadick/MauiNUnitRunner</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bstadick/MauiNUnitRunner</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>NUnit;MAUI;Unit Test Runner</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='UnitTest'">
    <DefineConstants>DEBUG;UNITTEST</DefineConstants>
  </PropertyGroup>
</Project>
